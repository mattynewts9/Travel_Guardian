<h5>Based on your search... here is what we found</h5>
<div class="d-flex">
  <h2 class="d-flex">This area has an average safety rating of:
  <% total_crime_rating = @hotels.sum(:crime_rating) %>
  <% average_crime_rating = total_crime_rating / @hotels.size %>
  <p class="mx-1"><%= average_crime_rating %></p></h2>
</div>

<div class="map-container">
  <table class="d">
  <tr>
    <th><%=%> crimes within the area of <%= params[:search] %></th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <td><%= @categories %></td>
    <td><%= @dates %></td>
    <td>Germany</td>
  </tr>
  <tr>
    <td>Island Trading</td>
    <td>Helen Bennett</td>
    <td>UK</td>
  </tr>
  <tr>
    <td>Magazzini Alimentari Riuniti</td>
    <td>Giovanni Rovelli</td>
    <td>Italy</td>
  </tr>
</table>
  <div class="mapbox" style="width: 50%; height: 400px;"
    data-controller="map"
    data-map-hotel-markers-value="<%= @hotel_markers.to_json %>"
    data-map-crime-markers-value="<%= @crime_markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="hotel-containers">
  <% @hotels.each do |hotel| %>
  <div class="hotel-content">
      <%= image_tag hotel.image %>
    <div class="hotel-info">
        <h5><%= hotel.name %></h5>
        <p><%= hotel.address %></p>
        <p><%= hotel.crime_rating %></p>
    </div>
  </div>
<% end %>
</div>
