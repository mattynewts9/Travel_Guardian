<h1 class="hotel-name text-center"><%= @hotel.name %></h1>

<h2 class="reports-title">Reports:</h2>

<h3 class="add-report-title">Add a Report:</h3>
<p class="crime-info text-center" style="font-size: 0.9em; color: gray;">(Please include information relevant to crime issues)</p> <!-- Instruction placed below the title -->

<div class="form-container">
  <%= form_with model: [@hotel, @report], local: true, html: { class: 'report-form', id: 'reportForm' } do |f| %>
    <div class="form-group">
      <%= f.label :content, 'Your Report (Crime-related information only)', class: 'form-label' %>
      <%= f.text_area :content, placeholder: "Enter your crime-related report here...", rows: 10, class: 'form-control report-text-area' %>
    </div>

    <div class="form-group">
      <%= f.label :safety_rating, 'Safety Rating (1-5)', class: 'form-label' %>
      <%= f.select :safety_rating, options_for_select((1..5).map { |n| [n, n] }), class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Submit Report', class: 'submit-button btn btn-primary btn-lg' %>
      <button type="button" class="clear-button btn btn-secondary btn-lg" onclick="clearForm()">Clear</button> <!-- Clear button -->
    </div>
  <% end %>
</div>

<%= simple_form_for [@hotel, @favourite] do |f| %>
  <%= f.submit "Submit favourite", class: "btn btn-primary" %>
<% end %>
