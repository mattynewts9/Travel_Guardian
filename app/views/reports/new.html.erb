<h1 class="hotel-name text-center mb-5"><%= @hotel.name %></h1>

<div class="container">
  <div class="hotel-details mb-4">
    <div class="hotel-image mb-3">
      <%= image_tag @hotel.image, alt: @hotel.name, class: "img-fluid rounded shadow" %>
    </div>

    <h2 class="reports-title">Reports:</h2>

    <h3 class="add-report-title mt-4">Add a Report:</h3>
    <p class="crime-info text-center text-muted" style="font-size: 0.9em;">(Please include information relevant to crime issues)</p>

    <div class="form-container mt-4">
      <%= form_with model: [@hotel, @report], local: true, html: { class: 'report-form', id: 'reportForm' } do |f| %>
        <div class="form-group">
          <%= f.label :comment, 'Your Report (Crime-related information only)', class: 'form-label' %>
          <%= f.text_area :comment, placeholder: "Enter your crime-related report here...", rows: 5, class: 'form-control report-text-area' %>
        </div>

        <div class="form-group">
          <%= f.label :safety_rating, 'Safety Rating (1-5)', class: 'form-label' %>
          <%= f.select :safety_rating, options_for_select((1..5).map { |n| [n, n] }), {}, class: 'form-control' %>
        </div>

        <div class="form-actions d-flex justify-content-between mt-4">
          <%= f.submit 'Add Report', class: 'submit-btn' %>
          <button type="button" class="clear-btn" onclick="clearForm()">Clear</button>
          <%= link_to 'Back', request.referrer || hotels_path, class: 'back-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function clearForm() {
    document.getElementById('reportForm').reset();
  }
</script>
