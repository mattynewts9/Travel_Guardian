<div class="hotel-body-container">
  <%= link_to "Return to search", root_path, class: "return-button"%>
<h2 class="fav-header">My favourites</h2>
<div class="container-fav">
  <% @favourites.each do |favourite| %>
    <div class="card-fav">
      <%= image_tag favourite.hotel.image %>
      <div class="card-fav-infos">
        <div>
         <h2 class="hotel-name"><%= favourite.hotel.name %></h2>
         <p><%= favourite.hotel.address %></p>
         <h2 class="crime-rating"> Crime rating : <%= favourite.hotel.crime_rating %></h2>

        </div>
        <div class="heart">
          <%# <i class="fa-solid fa-heart" style="color: #e71313;"></i> %>
        </div>
        <div class="trash-can">
          <%= link_to favourite_path(favourite), data: {turbo_method: :delete, turbo_confirm: "Do you really want to remove #{favourite.hotel.name} from favourites?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

</div>
